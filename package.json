{
  "name": "japan-train-data",
  "version": "0.6.0",
  "description": "A circular object of train data for Japan including translations & station geocoding",
  "author": "Marco LÃ¼thy <marco@luethy.net>",
  "keywords": [
    "japan",
    "train",
    "station",
    "line",
    "data"
  ],
  "main": "dist/bundle.cjs.js",
  "module": "dist/bundle.es.js",
  "files": [
    "dist/bundle.cjs.js",
    "dist/bundle.es.js"
  ],
  "repository": "git@github.com:adieuadieu/japan-train-data.git",
  "bugs": {
    "url": "https://github.com/adieuadieu/japan-train-data/issues"
  },
  "homepage": "https://github.com/adieuadieu/japan-train-data",
  "license": "MIT",
  "engines": {
    "node": ">= 6.1"
  },
  "config": {
    "jsSrc": "src/"
  },
  "scripts": {
    "test": "npm run lint && nyc ava",
    "watch:test": "ava --watch",
    "ava": "ava",
    "lint": "npm run lint:eslint -s",
    "lint:eslint": "eslint $npm_package_config_jsSrc",
    "coverage": "nyc report",
    "generate": "babel-node src/make.js --max_old_space_size=4096 --max-old-space-size=4096 --optimize_for_size --max_executable_size=4096 --stack_size=4096",
    "prepack": "prepack src/index.js --out lib/index.js",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "prepublish": "rm -Rf dist/ && yarn build"
  },
  "dependencies": {
    "kuroshiro": "^1.1.1",
    "kuroshiro-analyzer-kuromoji": "^1.1.0",
    "wanakana": "^4.0.2",
    "xmlhttprequest": "^1.8.0"
  },
  "devDependencies": {
    "@google-cloud/translate": "^0.8.2",
    "@google/maps": "^0.3.1",
    "ava": "^0.19.1",
    "awaiting": "^2.2.0",
    "axios": "^0.16.1",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-stage-3": "^6.24.1",
    "babel-register": "^6.24.1",
    "babel-runtime": "^6.23.0",
    "codacy-coverage": "^2.0.2",
    "coveralls": "^2.13.1",
    "delay": "^2.0.0",
    "dotenv": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-ava": "^4.2.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-tap": "^2.0.1",
    "jsonfile": "^3.0.0",
    "minimist": "^1.2.0",
    "nyc": "^10.3.2",
    "p-queue": "^1.0.0",
    "ramda": "^0.23.0",
    "rollup": "^0.41.6",
    "rollup-plugin-json": "^2.1.1",
    "xml2js": "^0.4.17"
  },
  "ava": {
    "require": "babel-register",
    "babel": "inherit"
  },
  "babel": {
    "sourceMaps": "inline",
    "plugins": [
      "transform-runtime"
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 6.1
          }
        }
      ],
      "stage-3"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "ava",
      "import"
    ],
    "extends": [
      "airbnb-base",
      "plugin:ava/recommended"
    ],
    "settings": {
      "import/parser": "babel-eslint",
      "import/resolve": {
        "moduleDirectory": [
          "node_modules",
          "src",
          "./"
        ]
      }
    },
    "rules": {
      "no-console": 0,
      "max-len": [
        "error",
        80
      ],
      "space-before-function-paren": [
        "error",
        "always"
      ]
    }
  }
}
